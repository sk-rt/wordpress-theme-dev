{
    "name": "post-content-sync/post-content-sync",
    "version": "0.1.0",
    "description": "Sync static HTML content to WordPress posts",
    "type": "wordpress-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Ryuta Sakai"
        }
    ],
    "autoload": {
        "psr-4": {
            "PostContentSync\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PostContentSync\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "php-stubs/wp-cli-stubs": "^2.10"
    },
    "scripts": {
        "cs": "phpcs --standard=PSR2 src/",
        "cs-fix": "phpcbf --standard=PSR2 src/",
        "analyse": "phpstan analyse src/ --level=5"
    }
}
